<div class="col-sm-12 col-md-12">
  <div class="col-md-6 col-md-offset-3">
    <h2>Convert your favourite blog into epub</h2>
      <%= form_tag('/', {method: "GET", role: "form", id: "search_form"}) do %>
        <div class="form-group">
          <%= text_field_tag "url", nil, class: 'form-control', id: "search_field" %>
        </div>
        <%= submit_tag 'search', class: "btn btn-success", id: "search_button" %>
      <% end %>
  </div>
  <div id="notify"><img src="/assets/loading.gif" /></div>
  <div class="main_content"></div>
</div>
